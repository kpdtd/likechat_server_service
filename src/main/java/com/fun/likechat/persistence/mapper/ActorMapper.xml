	<!-- 随机获取20条主播 -->
	<select id="getRandomActors" resultType="com.fun.likechat.persistence.po.Actor">
		SELECT
			*
		FROM
			t_actor 
	    ORDER BY 
	    	RAND()  LIMIT ${limit}
	</select>
	
	<!-- 根据tag标签条件随机获取20条主播 -->
	<select id="getRandomActorsByCondition" resultType="com.fun.likechat.persistence.po.Actor">
		SELECT
			*
		FROM
			t_actor, t_r_actor_tag
		WHERE
			t_r_actor_tag.identifying = #{tag_identifying} and t_r_actor_tag.actor_id = t_actor.id
	    ORDER BY 
	    	RAND()  LIMIT ${limit}
	</select>	
