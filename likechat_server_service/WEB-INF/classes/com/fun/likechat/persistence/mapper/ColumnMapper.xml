<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fun.likechat.persistence.mapper.ColumnMapper">
	<select id="getById" resultType="com.fun.likechat.persistence.po.Column"
		parameterType="java.lang.Integer">
		select * from t_column
		where id = #{id}
	</select>
	<select id="getColumnByIdentifying" resultType="com.fun.likechat.persistence.po.Column"
		parameterType="java.lang.String">
		select * from t_column where state = 1 and
		identifying=#{identifying} order by display_order desc;
	</select>

	<select id="getSonColumnByIdentifying" resultType="com.fun.likechat.persistence.po.Column"
		parameterType="java.lang.String">
		select * from t_column where state = 1 and parent_id in
		(select id
		from t_column
		where state = 1 and
		identifying=#{identifying}) order by display_order desc;
	</select>

</mapper>