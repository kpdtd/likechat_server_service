<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fun.likechat.persistence.mapper.DictionaryMapper">

	<sql id="Base_Column_List">
		id,grouping,name,value,description,create_time,update_time
	</sql>
	<select id="getById" resultType="com.fun.likechat.persistence.po.DataDictionary"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from data_dictionary
		where id = #{id}
	</select>
	<delete id="deleteById" parameterType="java.lang.Integer">
		delete from
		data_dictionary
		where id = #{id}
	</delete>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.fun.likechat.persistence.po.DataDictionary">
		insert into data_dictionary
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				id,
			</if>
			<if test="grouping != null">
				grouping,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="value != null">
				value,
			</if>
			<if test="description != null">
				description,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="updateTime != null">
				update_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="grouping != null">
				#{grouping},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="value != null">
				#{value},
			</if>
			<if test="description != null">
				#{description},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="updateTime != null">
				#{updateTime},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="com.fun.likechat.persistence.po.DataDictionary">
		update data_dictionary
		<set>
			<if test="id != null">
				id = #{id},
			</if>
			<if test="grouping != null">
				grouping = #{grouping},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="value != null">
				value = #{value},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
			<if test="createTime != null">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>
		</set>
		where id = #{id}
	</update>

	<select id="count" resultType="int">
		select
		count(*)
		from
		data_dictionary
		<where>
			<if test="id != null">
				AND id != #{id}
			</if>
			<if test="name != null">
				AND name like '%${name}%'
			</if>
			<if test="value != null">
				AND value = #{value}
			</if>
		</where>
	</select>

	<select id="getListByMap" parameterType="java.util.Map"
		resultType="com.fun.likechat.persistence.po.DataDictionary">
		SELECT
		*
		FROM
		data_dictionary
		<where>
			<if test="id > 0">
				id = #{id}
			</if>
			<if test="name != null">
				AND name like '%${name}%'
			</if>
			<if test="value != null">
				AND value = #{value}
			</if>
		</where>
		order by ${prop} ${sort} limit #{startPage}, #{pageSize}
	</select>
	
	<select id="countKey" resultType="int">
		select
		count(*)
		from
		data_dictionary
		<where>
			<if test="id != null">
				AND id != #{id}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
			<if test="value != null">
				AND value = #{value}
			</if>
		</where>
	</select>
	
	<select id="getListByPo" parameterType="com.fun.likechat.persistence.po.DataDictionary" resultType="com.fun.likechat.persistence.po.DataDictionary">
		SELECT
			*
		FROM 
			data_dictionary
		<where>
			<if test="id > 0"> 
				id = #{id}
			</if>
			<if test="name != null"> 
				AND name = #{name}
			</if>
			<if test="value != null"> 
				AND value = #{value}
			</if>
		</where>
	</select>
</mapper>